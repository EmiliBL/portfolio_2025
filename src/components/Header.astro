---
import Link from "./Link.astro"
---
<!-- Navigations menu med logo:left og undersider:right -->
<div x-data="{ showmenu: false }" class="p-4 fixed top-0 left-0 right-0 bg-blue-500 text-red-500 z-50 drop-shadow-md" style="font-family: 'Roboto', sans-serif;">
    <div id="navbar" class="flex flex-row justify-between">
        <div id="logo" class="font-Unbounded text-3xl">
            <a href="/">Emilie B. Larsen</a>
        </div>

        <nav id="desktopmenu" class="hidden lg:block">
            <ul style="font-family: 'Roboto', sans-serif;" class="flex flex-row gap-2 font-light">
                <li class="no-underline"><Link href="#about">About</Link></li>
                <li class="no-underline"><Link href="#skills">Skills</Link></li>
                <li class="no-underline"><Link href="#projects">Projects</Link></li>
                <li class="no-underline"><Link href="#resume">Resume</Link></li>
            </ul>
        </nav>


    <button style="font-family: 'Roboto', sans-serif;" id="burgermenu" class="lg:hidden font-light" x-on:click="showmenu = ! showmenu">Menu</button>
    </div>

    <nav id="mobilmenu" style="font-family: 'Roboto', sans-serif;" class="flex flex-col content-center pt-4 font-light" 
    x-show="showmenu" x-transition x-on:click="showmenu = false" x-on:click.outside="showmenu = false">
    <ul >
    <li class="text-right py-2 border-y-2"><Link href="#projects" >Projects</Link></li>
    <li class="text-right py-2 border-b-2"><Link href="#about" >About</Link></li>
    <li class="text-right py-2 border-b-2"><Link href="#skills" >Skills</Link></li>
    <li class="text-right py-2 border-b-2"><Link href="#resume" >Resume</Link></li>
    </nav>
</div>
    
