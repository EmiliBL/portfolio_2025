import MainLayout from "../layouts/MainLayout.astro";
import Button from '../components/Button.astro';
import Link from '../components/Link.astro';
import { Image } from 'astro:assets';
---

<MainLayout title="Titel">
<section class="m-4"> 
<h1 class="text-3xl sm:text-4xl sm:text-9xl p-4 text-red-500 font-bold">What my skills can do</h1>
<!-- Horizontal linje -->
<hr class="border-t-1 border-red-500 w-full">

<!-- Oversigt -->
<section class="flex flex-col sm:flex-row sm:flew-col-3">
    <div>
        <h2 class="sm:ml-4 sm:mt-12 text-red-500 text-3xl font-bold sm:text-4xl w-[262px]">Here is a extract of my projects</h2>
    </div>
    <!-- Vertikal linje -->
    <div class="hidden sm:block mt-2 h-[565px] w-[1px] self-stretch bg-red-500"></div>

<!-- vanvittig -->
 <section class="col-span-2 sm:w-[545px]">
<h3 class="mt-4 sm:ml-4 sm:mt-12 text-red-500 text-3xl sm:text-3xl">01 Podcast website</h3>
<p class="sm:ml-4 sm:mt-4 text-red-500 text-sm mb-8 sm:text-lg">The Danish history podcast Vanvittig Verdenshistorie struggled to engage new users due to its exclusive, text-heavy content. My team designed a responsive web and mobile solution to improve accessibility and communication. </p>
